<div class="row">
  <div class="col-md-3">
    <center>
      <% if @product.image.present? %>
        <%= image_tag @product.image, class: 'img-responsive' %>
      <% end %>
    </center>
  </div>
  <div class="col-mid-9">
    <div class="h3">
      <%= @product.name %>
    </div>
    <%= form_for @line_item, remote: true do |f| %>
    <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency @product.price %></span></h4>
    <div class="col-md-4 pull-right">
      <div class="input-group">
        <%= f.number_field :quantity, value: 1, class: "form-control", min: 1, max: 100 %>
        <div class="input-group-btn">
          <%= f.hidden_field :product_id, value: @product.id %>
          <%= f.submit "Add to Cart", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
      <% end %>
  </div>
</div>
<div class="row">

</div>
